<div class="search-bar mt-3 p-3 p-lg-6 ps-lg-4">
    <form action="#">
      <div class="row">
        <div class="col-12" style="display: flex;">
        <%= form_tag boats_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a boat"
        %>
        <%= submit_tag "Search", style: "font-weight:600", class: "btn btn-info text-black" %>
        <% end %>
        </div>
      </div>
    </form>
</div>
